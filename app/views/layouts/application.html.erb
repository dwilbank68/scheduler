  <div id="timezone" class="quicksand-light white-glow-dim lowered spaced"><%= current_user.timezone if current_user %></div>
  <div id="new-unit">
    <%= link_to("New Unit", new_unit_path, class: 'quicksand-light white-glow-dim spaced') %>
  </div>
