<div class="row">
  <div class="col-sm-4 col-sm-offset-4 col-xs-8 col-xs-offset-2 well signin gruppo">
    <h1 class="txt-centered white-glow">Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'email', :input_html => {:class => 'quicksand-reg'} %>
          <%= f.input :password, required: false, label: false, placeholder: 'password', :input_html => {:class => 'quicksand-reg'} %>
          <div class="row">
            <div class="col-xs-1">
              <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="col-xs-11 white-glow" id="remember-label">Remember Me</div>
          </div>
        </div>

        <div class="form-actions txt-centered">
          <%= f.button :submit, "Log in", class:"white-glow", id:"login" %>
        </div>

    <% end %>

    <div class="devise-shared-links"><%= render "devise/shared/links" %></div>
  </div>
</div>
