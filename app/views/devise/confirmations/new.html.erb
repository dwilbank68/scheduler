<div class="col-md-4 col-md-offset-4 well signin">
  <div class="microgramma-bold larger spaced">Resend confirmation message</div>

  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post} ) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs quicksand-reg">
        <%= f.input :email, required: true, autofocus: true, placeholder: 'email', label: false, :input_html => { :class => 'form-control input-lg' } %>
      </div>

      <div class="form-actions microgramma">
        <%= f.button :submit, "Resend confirmation instructions" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %></div>
